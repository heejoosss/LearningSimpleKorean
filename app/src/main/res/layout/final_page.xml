<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/hanguel_main_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/goodjob"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="50sp"
        android:fontFamily="sans-serif-medium"
        android:text="GREAT JOB!"
        android:textColor="#FF5722"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textStyle="italic"
        android:text="It is the end of the course"
        android:textColor="#212121"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="17sp"
        android:textStyle="italic"
        android:text="You can find more information at below LINK"
        android:textColor="#FF9800"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        android:textColor="#536DFE"
        android:text="Learing More Korean"
        android:autoLink="web" android:id="@+id/infoTxtCredits"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:linksClickable="true">
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="40sp"
        android:text="LEARN AGAIN"
        android:onClick="goToStart"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>